@using MedienkurseTest2.Models.AccountViewModels;
@model OrtViewModel
@{
    ViewData["Title"] = "Ort | Edit";
}

<h2>Edit Ort</h2>
<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("Update", "Ort", new { Model.Id }, FormMethod.Post))
        {
            @Html.ValidationSummary()
            <div>
                @Html.LabelFor(model => model.PLZ)
                @Html.TextBoxFor(model => model.PLZ, new { @placeholder = "Plz", @type = "number" })
                <br />
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, new { @placeholder = "Ort" })
                <br />
                @Html.LabelFor(model => model.Kanton)
                @Html.TextBoxFor(model => model.Kanton, new { @placeholder = "Kanton" })
                <br />
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input type="submit" class="button button--primary button--full" value="Aktualisieren" />
                </div>
            </div>
        }
    </div>
</div>
